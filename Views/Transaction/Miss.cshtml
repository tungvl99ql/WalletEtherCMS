<div class="col-md-6 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Check miss tx </h4>
            <p class="card-description">check the address's missed transaction (Last 5 transactions) </p>
            
            <div class="form-group">
                <label for="exampleInputEmail1">Address</label>
                <input type="text" class="form-control" id="address" placeholder=". . .">
            </div>
            <div class="form-group row">
                <label class="col-sm-3 col-form-label">Token</label>
                <div class="col-sm-2">
                    <div class="form-check">
                        <label class="form-check-label">
                            <input type="radio" class="form-check-input" name="membershipRadios" id="membershipRadios1" value="USDT" checked=""> USDT <i class="input-helper"></i>
                        </label>
                    </div>
                </div>
                <div class="col-sm-2">
                    <div class="form-check">
                        <label class="form-check-label">
                            <input type="radio" class="form-check-input" name="membershipRadios" id="membershipRadios2" value="USDC"> USDC <i class="input-helper"></i>
                        </label>
                    </div>
                </div>
                <div class="col-sm-2">
                    <div class="form-check">
                        <label class="form-check-label">
                            <input type="radio" class="form-check-input" name="membershipRadios" id="membershipRadios2" value="BUSD"> BUSD <i class="input-helper"></i>
                        </label>
                    </div>
                </div>
                <div class="col-sm-2">
                    <div class="form-check">
                        <label class="form-check-label">
                            <input type="radio" class="form-check-input" name="membershipRadios" id="membershipRadios2" value="USDT_TESTNET"> USDT-TN <i class="input-helper"></i>
                        </label>
                    </div>
                </div>
            </div>
            <button onclick="Check()" class="btn btn-primary mr-2">Check transaction</button>
        </div>
    </div>
</div>

<script>

    function Check() {
        let address = document.getElementById("address").value;

        const options = document.getElementsByName("membershipRadios");
        var token = "";
        for (const option of options) {
            if (option.checked) {
                //console.log(option.value);
                token = option.value;
                break;
            }
        }

        if (address.length > 10) {
            let param = {
                'address': address,
                'tokenname': token
            };
            $.ajax({
                type: 'POST',
                url: "@Url.Action("Check")",
                data: param,
                async: true,
                success: function (data) {
                    console.log("data", data)
                    var str = "cập nhật thành công " + data.data.length + " giao dịch bị lỡ";
                    alert(str);
                }
            });
        } else {
            alert("address not null!");
        }
    }
</script>