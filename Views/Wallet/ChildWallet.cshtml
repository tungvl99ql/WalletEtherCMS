@{
}
@{
    List<listwalletchild> ls = Model;
}
<div class="card">
    <div class="card-body">
        <h4 class="card-title">List Wallet</h4>
        <p class="card-description">
            @*Add class <code>.table</code>*@
        </p>
        <div class="table-responsive">
            <table class="table">
                <thead>
                    <tr class="">
                        <th style="color:white">Address</th>
                        <th style="color:white">Path</th>
                        <th style="color:white">Option</th>
                    </tr>
                </thead>
                <tbody>
                    @{
                        foreach (var item in ls)
                        {
                            <tr>
                                <td style="color:white">@item.address</td>
                                <td style="color:white">@item.path</td>
                                <td>
                                    <a class="btn btn-danger" href="@Url.Action("GetPrivateKey","Wallet",new {address=item.address ,path= item.path})">Get privatekey</a>
                                </td>
                            </tr>
                        }
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>