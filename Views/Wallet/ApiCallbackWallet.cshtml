<script>
    document.addEventListener('DOMContentLoaded', () => {
        const textarea = document.getElementById('body');
        textarea.value = `@Html.Raw(data.bodycontent)` ;

        const textarea1 = document.getElementById('body_gameserver');
        textarea1.value = `@Html.Raw(data.bodycontent_withdraw)`;
    });


    function Save() {
        let address = document.getElementById("address").value;
        let url = document.getElementById("url").value;
        let body = document.getElementById("body").value;
        let idtelegram = document.getElementById("idtelegram").value;
        let projectname = document.getElementById("projectname").value;

        let urlgameserver = document.getElementById("url_gameserver").value;
        let bodygameserver = document.getElementById("body_gameserver").value;
        let secret_gameserver = document.getElementById("secret_gameserver").value;

        let param = {
            'projectname': projectname,
            'address': address,
            'url': url,
            'body': body,
            'idtelegram': idtelegram,
            "url_gameserver": urlgameserver,
            "body_gameserver": bodygameserver,
            "secret_gameserver": secret_gameserver
        };

        $.ajax({
            type: 'POST',
            url: "@Url.Action("SetCallback")",
            data: param,
            async: true,
            success: function (data) {
                console.log("data", data)
                if (data.success) {
                    alert(data.message)
                } else {
                    alert(data.message)
                }
            }
        });
    }
</script>